@font_reg: "Ubuntu Regular","Arial Regular","DejaVu Sans Book";

.titles::labels{
  [zoom=14][z=14]{
    text-face-name:@font_reg;
    text-fill:#555;
    text-halo-fill:#fff;
    text-halo-radius:2;
    text-name:"[name]";
    text-size: 15;
  }
  [zoom=15][z=15]{
    text-face-name:@font_reg;
    text-fill:#555;
    text-halo-fill:#fff;
    text-halo-radius:2;
    text-name:"[name]";
    text-size: 14;
  }
  [zoom=16][z=16]{
    text-face-name:@font_reg;
    text-fill:#555;
    text-halo-fill:#fff;
    text-halo-radius:2;
    text-name:"[name]";
    text-size: 14;
  }
}